<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:paddingLeft="@dimen/dm_horizontal_margin"
	android:paddingRight="@dimen/dm_horizontal_margin"
	android:paddingTop="@dimen/dm_horizontal_margin" >

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@android:color/white"
		android:paddingLeft="@dimen/dm_horizontal_margin"
		android:paddingRight="@dimen/dm_horizontal_margin"
		android:paddingTop="@dimen/dm_horizontal_margin" >

		<cc.itbox.babysay.ui.CircleImageView
			android:id="@+id/iv_head"
			android:layout_width="50dp"
			android:layout_height="50dp"
			android:layout_gravity="center_horizontal"
			android:src="@drawable/aaa"
			app:border_color="@color/dark"
			app:border_width="2dp" />

		<TextView
			android:id="@+id/tv_nickname"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignLeft="@+id/tv_time"
			android:layout_alignTop="@+id/iv_head"
			android:layout_marginTop="5dp"
			android:text="用户昵称" />

		<TextView
			android:id="@+id/tv_time"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/tv_nickname"
			android:layout_marginLeft="14dp"
			android:layout_marginTop="5dp"
			android:layout_toRightOf="@+id/iv_head"
			android:text="10:30 发布" />

		<ImageView
			android:id="@+id/iv_image"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@id/iv_head"
			android:layout_marginTop="5dp"
			android:scaleType="fitXY"
			android:src="@drawable/aaa" />

		<ImageView
			android:id="@+id/iv_play"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignBottom="@id/iv_image"
			android:layout_alignRight="@id/iv_image"
			android:layout_marginBottom="5dp"
			android:layout_marginRight="5dp"
			android:src="@drawable/selector_dm_play" />

		<ProgressBar
			android:id="@+id/pd_load"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:layout_alignBottom="@id/iv_play"
			android:layout_alignLeft="@id/iv_play"
			android:layout_alignRight="@id/iv_play"
			android:layout_alignTop="@id/iv_play" />

		<ProgressBar
			android:id="@+id/pd_play"
			style="?android:attr/progressBarStyleHorizontal"
			android:layout_width="match_parent"
			android:layout_height="5dp"
			android:layout_alignBottom="@+id/iv_image"
			android:max="100"
			android:progress="50" />

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@id/iv_image"
			android:orientation="horizontal" >

			<ImageView
				android:id="@+id/iv_praise"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:padding="10dp"
				android:src="@drawable/selector_dm_haspraise" />

			<ImageView
				android:id="@+id/iv_comment"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:padding="10dp"
				android:src="@drawable/selector_dm_comment" />

			<ImageView
				android:id="@+id/iv_share"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:padding="10dp"
				android:src="@drawable/selector_dm_share" />

			<ImageView
				android:id="@+id/iv_more"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:padding="10dp"
				android:src="@drawable/selector_dm_more" />
		</LinearLayout>
	</RelativeLayout>

</RelativeLayout>