<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@android:color/white" >

	<ImageView
		android:id="@+id/iv_content"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="5dp"
		android:scaleType="fitXY"
		android:src="@drawable/aaa" />

	<ImageView
		android:id="@+id/iv_play"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignBottom="@id/iv_content"
		android:layout_alignRight="@id/iv_content"
		android:layout_marginBottom="5dp"
		android:layout_marginRight="5dp"
		android:src="@drawable/selector_dm_play" />

	<ProgressBar
		android:id="@+id/pd_load"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:layout_alignBottom="@id/iv_play"
		android:layout_alignLeft="@id/iv_play"
		android:layout_alignRight="@id/iv_play"
		android:layout_alignTop="@id/iv_play" />

	<ProgressBar
		android:id="@+id/pd_play"
		style="?android:attr/progressBarStyleHorizontal"
		android:layout_width="match_parent"
		android:layout_height="5dp"
		android:layout_alignBottom="@+id/iv_content"
		android:max="100"
		android:progress="50" />

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/iv_content"
		android:orientation="horizontal" >

		<ImageView
			android:id="@+id/iv_praise"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:padding="10dp"
			android:src="@drawable/selector_dm_haspraise" />

		<ImageView
			android:id="@+id/iv_comment"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:padding="10dp"
			android:src="@drawable/selector_dm_comment" />

		<ImageView
			android:id="@+id/iv_share"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:padding="10dp"
			android:src="@drawable/selector_dm_share" />

		<ImageView
			android:id="@+id/iv_more"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:padding="10dp"
			android:src="@drawable/selector_dm_more" />
	</LinearLayout>

</RelativeLayout>